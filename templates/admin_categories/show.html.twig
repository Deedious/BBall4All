{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Sub Categories</th>
			</tr>
		</thead>
		<tbody>

			<tr>
				<td>{{ category.id }}</td>
				<td>{{ category.title }}</td>
				<td>

					{% for subCategory in subCategories %}
						{{ subCategory.title }}
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</tr>


</tbody>
</table>
<a href="{{ path('app_admin_categories_index') }}">back to list</a>
<a href="{{ path('app_admin_categories_edit', {'id': category.id}) }}">edit</a>
{{ include('admin_categories/_delete_form.html.twig') }}
{% endblock %}
