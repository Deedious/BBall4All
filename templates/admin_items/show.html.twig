{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}
    <h1 class="text-light">Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="text-light">Id</th>
                <td class="text-light">{{ item.id }}</td>
            </tr>
            <tr>
                <th class="text-light">Title</th>
                <td class="text-light">{{ item.title }}</td>
            </tr>
            <tr>
                <th class="text-light">Description</th>
                <td class="text-light">{{ item.description }}</td>
            </tr>
            <tr>
                <th class="text-light">Price</th>
                <td class="text-light">{{ item.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_items_index') }}">back to list</a>

    <a href="{{ path('app_admin_items_edit', {'id': item.id}) }}">edit</a>

    {{ include('admin_items/_delete_form.html.twig') }}
{% endblock %}
