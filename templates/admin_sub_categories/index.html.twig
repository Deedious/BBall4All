{% extends 'base.html.twig' %}

{% block title %}SubCategories index
{% endblock %}

{% block body %}
	<h1>SubCategories index</h1>

	<table class="table table-bordered w-75 mx-auto">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Title</th>
				<th scope="col">actions</th>
			</tr>
		</thead>
		<tbody>
			{% for sub_category in sub_categories %}
				<tr>
					<td>{{ sub_category.id }}</td>
					<td>{{ sub_category.title }}</td>
					<td>
						<a href="{{ path('app_admin_sub_categories_show', {'id': sub_category.id}) }}">Show</a>
						-
						<a href="{{ path('app_admin_sub_categories_edit', {'id': sub_category.id}) }}">Edit</a>
						-
						<a href="{{ path('app_displayitems' , {'id': sub_category.id}) }}">Display Category's Items</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">No Records Found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_sub_categories_new') }}">Create new</a>
{% endblock %}
