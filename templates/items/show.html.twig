{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}
    <h1 class="text-light text-center">Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="text-light">#</th>
                <td class="text-light">{{ item.id }}</td>
            </tr>
            <tr>
                <th class="text-light">Title</th>
                <td class="text-light">{{ item.title }}</td>
            </tr>
            <tr>
                <th class="text-light">Description</th>
                <td class="text-light">{{ item.description }}</td>
            </tr>
            <tr>
                <th class="text-light">Price</th>
                <td class="text-light">{{ item.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_items_index') }}">back to list</a>

    {# <a href="{{ path('app_items_edit', {'id': item.id}) }}">edit</a> #}

    {# {{ include('items/_delete_form.html.twig') }} #}

    <br><br>
     <h3 class="text-center"><strong>Feedbacks</strong></h3>
     <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody> 
    {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.name }}</td>
                <td>{{ comment.topic }}</td>
                <td>
                    <a class="button" href="{{ path('app_comments_show', {'id': comment.id}) }}"><i class="fa-solid fa-magnifying-glass-plus"></i></a>
                </td>

{% endfor %}
    </table>
<br>
    <h4 class="text-center"><strong>Add a Feedback</strong></h4>
    {{ include('comments/_form.html.twig') }}
    <br><br>
{% endblock %}
