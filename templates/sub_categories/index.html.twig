{% extends 'base.html.twig' %}

{% block title %}SubCategories index{% endblock %}

{% block body %}
    <h1>SubCategories index</h1>

    <table class="table table-bordered w-75 mx-auto">
        <thead>
            <tr>
                <th class="text-light">Id</th>
                <th class="text-light">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td class="text-light">{{ sub_category.id }}</td>
                <td>
                    <a href="{{ path('app_sub_categories_show', {'id': sub_category.id}) }}">show</a>
                    {# <a href="{{ path('app_sub_categories_edit', {'id': sub_category.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-light" colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_sub_categories_new') }}">Create new</a> #}
{% endblock %}
